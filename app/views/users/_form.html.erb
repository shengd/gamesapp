<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= render "form_#{usr_form_type}", form: f %>
    <% end %>

    <% unless @user.new_record? %>
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">change</a>
    <% end %>
  </div>
</div>
